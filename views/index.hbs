        <script src="https://kit.fontawesome.com/8faedc4425.js" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="/css/styles.css">
    </head>

    <body>

        <section id="title">
            <div class="container-fluid container-heading">
                
                <!-- navbar -->
                <nav class="navbar navbar-expand-lg navbar-dark mb-3 postion-relative" style="z-index: 2">
                    <div class="container-fluid">
                        <a class="navbar-brand align-text-center" href="#title">
                            <div class="row">
                                <div class="col">
                                    <div class=" brand-container rounded mx-0 mx-md-auto">
                                        <img src="/images/brand.png" alt="Logo" class="brand-img">
                                    </div>
                                </div>
                                <div class="col px-0 mt-1 text-center">
                                    <span class="mx-auto">
                                        Tienda Virtual
                                    </span>
                                </div> 
                            </div>
                        </a>
                        <div class="col text-end">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>

                        <div class="collapse navbar-collapse text-start" id="navbarSupportedContent">
                             <ul class="navbar-nav ms-auto mb-2 mb-lg-0 pe-0 pe-lg-3">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="#title">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#Features">Popular</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#cards">Contacto</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#Catalog">Catálogo</a>
                                </li>
                                <li>
                                    
                                </li>
                            </ul>
                            
                            <div class="ms-0 ms-lg-5 text-start">
                                {{#if user}}
                                    <div class="dropdown-center ms-0 ms-lg-5">
                                        <a type="button" class="btn btn-outline-light catalog-btn ms-0 ms-lg-2 dropdown-toggle" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                            <span class="ps-2"> {{user.first_name}}</span>
                                        </a>
                                        <ul id="dropdownEnter" class="dropdown-menu text-small shadow text-start">
                                            <li><a class="dropdown-item" href="/marketplace/cart_shopping">Carrito</a></li>
                                            <li><a class="dropdown-item" href="/marketplace/order">Pedido</a></li>
                                            <li><a class="dropdown-item" href="/profile">Perfil</a></li>
                                            <li>
                                                <hr class="dropdown-divider">
                                            </li>
                                            <li><a class="dropdown-item" href="/logout">Cerrar Sesion</a></li>
                                        </ul>
                                    </div>
                                {{else}}
                                <a type="button" class="btn btn-outline-light catalog-btn mx-auto ms-md-0 ms-lg-2 " href="/login">
                                        <span class="ps-2 d-block"> Iniciar Sesion</span>
                                </a>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- title content -->
                <div class="container heading-content">
                    <div class="row">
                        <div class="col col-12 col-lg-6">
                            <h4 class="upper-heading-text">Productos de electrónica</h4>
                            <h1>La Mejor Tienda de productos de electrónica</h1>
                            <!-- <p>los mejores productos en electronica a precios buenos para tus proyectos profesionales Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard
                            </p> -->
                            <!-- <button type="button" class="dwl-button btn btn-outline-light btn-lg"><i class="fa-solid fa-store"></i> Download</button> -->
                        </div>
                        <div class="col col-12 col-lg-6 ">
                            {{!-- carousel --}}
                            <div id="carouselExampleSlidesOnly" class="carousel slide " data-bs-ride="carousel" data-bs-pause="true" data-bs-interval="5000">
                                <div class="carousel-inner img-overflow">
                                    <div class="carousel-item active">
                                        <div class="img-heading-container">
                                            <img src="/images/heading1.png" class="d-block w-100 heading-img-1" alt="...">
                                        </div>
                                    </div>
                                    <div class="carousel-item ">
                                        <div class="img-heading-container">
                                            <img src="/images/heading2.png" class="d-block w-100 heading-img-2" alt="...">
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <div class="img-heading-container">
                                            <img src="/images/heading3.png" class="d-block w-100 heading-img-2" alt="...">
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <div class="img-heading-container">
                                            <img src="/images/heading4.png" class="d-block w-100 heading-img-2" alt="...">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="/marketplace" type="button" class="dwl-button btn btn-outline-dark btn-lg mt-4 mt-lg-3"><i class="fa-solid fa-shop" style="color: #FFC93C"></i> Tienda</a>
                </div>
            </div>
            
