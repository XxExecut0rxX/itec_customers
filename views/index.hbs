        </section>

        <section id="Features">
            <div class="container-fluid container-items">
                <h2 class="mb-0 mb-lg-5 features-heading    ">Productos Más Vendidos</h2>
                <div class="row pt-0 pt-lg-5">
                    <div class="col col-12 col-lg-4">
                        <a href="/marketplace?category=16"><img src="images/arduino.jpg" class="img-feature mb-3 mb-lg-4 mt-lg-0 mt-5" alt="Feature1"></a>
                        <h3>Arduino</h3>
                    </div>
                    <div class="col col-12 col-lg-4">
                        <a href="/marketplace?category=18"><img src="images/impresora.jpg" class="img-feature mb-3 mb-lg-4 mt-lg-0 mt-5" alt="Feature2"></a>
                        <h3>Impresoras 3D</h3>
                    </div>
                    <div class="col col-12 col-lg-4">
                        <a href="marketplace?category=2"><img src="images/raspberry.jpg" class="img-feature mb-3 mb-lg-4 mt-lg-0 mt-5" alt="Feature3"></a>
                        <h3>Raspberry Pi</h3>
                    </div>
                </div>
            </div>
        </section>

        <section id="cards">
            <div class="container-fluid cards-container">
                <h2 class="mb-5 cards-heading">Acerca de nosotros</h2>
                <div class="row">
                    <div class="col col-12 col-lg-5 mb-5 mx-auto">
                        <div class="card text-start">
                            <img src="images/location.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">Nuestra Ubicación</h5>
                                <p class="card-text dark-text">Nos encontramos en la Calle ...</p>
                                <a href="/location" class="btn btn-primary"><i class="fa-solid fa-map-location-dot"></i> Ubicación</a>
                            </div>
                        </div>
                    </div>
                    <div class="col col-12 col-lg-5 mb-5 mx-auto">
                        <div class="card text-start ">
                            <img src="images/arduino.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">Contacto</h5>
                                <p class="card-text dark-text">Envianos un mensaje ...</p>
                                <a href="/contact" class="btn btn-primary"><i class="fa-regular fa-paper-plane"></i> Contactar</a>
                            </div>
                        </div>
                    </div>
