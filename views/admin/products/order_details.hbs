                            <h3>Detalles de Cliente</h3>
                            

                            <div class="row pb-5">
                                <div class="col">
                                    <div class="card mb-2 mt-2">
                                        <div class="card-body">
                                            {{#with client}}
                                            <form action="/links/add" method="POST">
                                                <div class="form-group pb-3">
                                                    <label class="" for="">Nombre(s) :</label>
                                                    <h5>{{first_name}}</h5>
                                                </div>
                                                <div class="form-group pb-3">
                                                    <label class="" for="">Apellido(s) :</label>
                                                    <h5>{{last_name}}</h5>
                                                </div>
                                                <div class="form-group pb-3">
                                                    <label class="" for="">Email :</label>
                                                    <h5>{{email}}</h5>
                                                </div>
                                                <div class="form-group pb-2 text-center">
                                                    <a class="btn btn-outline-secondary" href="/admin/edit_client/{{id}}">
                                                        <h5>Detalles del Cliente</h5>
                                                    </a>
                                                </div>
                                            </form>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                                <div class="col col-7"></div>
                            </div>   
                            
