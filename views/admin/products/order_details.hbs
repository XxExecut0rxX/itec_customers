                    <h1 class="h2">Detalles de la Orden</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                    </div>
                </div>
                
                
                <h3>Orden #{{order.id}}</h3>
                
                <div class="container-fluid pt-2">
                    <div class="row">
                        <div class="col px-0">
                            <table class="table table-hover table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Precio</th>
                                        <th>Cantidad</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody class="table-group-divider">
                                    {{!-- <tr class="">
                                        <td class="order align-middle white-space-nowrap">23</td>
                                        <td class="align-middle white-space-nowrap ps-8">
                                            <a class=" align-items-center" href="#">
                                                <h6 class="mb-0 text-900">Arduino Uno</h6>
                                            </a>
                                        </td>
                                        <td class="total align-middle fw-semi-bold text-1000">95 Bs.</td>
                                        
                                        <td class="date align-middle white-space-nowrap text-700 "><span class="h2">45</span> unidades</td>
                                    </tr>
                                    <tr class="">
                                        <td class="order align-middle white-space-nowrap">23</td>
                                        <td class="align-middle white-space-nowrap ps-8">
                                            <a class=" align-items-center" href="#">
                                                <h6 class="mb-0 text-900">Arduino Uno</h6>
                                            </a>
                                        </td>
                                        <td class="total align-middle fw-semi-bold text-1000">95 Bs.</td>
