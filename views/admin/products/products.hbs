<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OVA admins</title>

    <!-- boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;900&family=Ubuntu:wght@300;400;700&display=swap"
        rel="stylesheet">
    <!-- font awesome icons -->
    <script src="https://kit.fontawesome.com/8faedc4425.js" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="/css/styles_dashboard.css">
</head>
<body>
    
    {{> a_header}}

    <div class="container-fluid">
        <div class="row">

            {{!-- side navbar --}}
            {{> a_sidebar bar_products="true"}}

            <!-- dashboard -->

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="container-fluid px-0">
                    <div class="align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <div class="row">
                            <div class="col col-12 col-md-3 text-center text-md-start">
                                <h1 class="h2">Productos</h1>
                            </div>
                            <div class="col col-12 col-md-6">
                                <div class="row">
                                    <div class="col"></div>
                                    <div class="col col-12 col-sm-10 col-md-10 col-xl-10 mb-3 mb-md-0">    

                                        {{!-- search bar  --}}
                                        <form action="/admin/products/search" method="get">
                                            <div class="input-group flex-nowrap">
                                                <input name="searchText" type="text" class="form-control" placeholder="Buscar productos" aria-label="Username" aria-describedby="addon-wrapping" value="{{searchValue}}">
                                                <button type="submit" class="btn btn-outline-primary"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col"></div>
                                </div>
                            </div>
                            <div class="col col-12 col-md-3 text-center text-md-end">
                                <a class="btn btn-success" href="/admin/add_product">Añadir Producto <i class="fa-solid fa-plus"></i></a>
                            </div>
                        </div>
                        
                    </div>
                    {{#if message}}
                        <div class="alert {{alertType}} alert-dismissible fade show" role="alert">
                            {{message}}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {{/if}}
                </div>

                <h2>Productos Registrados</h2>

                {{!-- filters --}}
                {{#with filters}}
                <ul class="nav nav-links mb-3 mb-lg-2 mx-n3">
                    <li class="nav-item"><a href="/admin/products/all" class="nav-link active" aria-current="page">Todos <span
                                class="text-700 text-black">({{all}})</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/products/published">Existentes <span class="text-700 text-black">({{published}})</span></a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/admin/products/out_of_stock">Agotados <span class="text-700 text-black">({{out_of_stock}})</span></a>
                    </li>

                </ul>
                {{/with}}

                <div class="table-sm-responsive overflow-auto">
                {{#if products}}
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Imagen</th>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Categoria</th>
                                <th>Stock</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                        {{#each products}}
                            {{#unless isDeleted}}
                            <tr class="">
                                <td class="order align-middle text-nowrap">{{id}}</td>
                                <td class="order align-middle text-nowrap"><img src="{{img_dir}}" alt="img" width="50" ></td>
                                <td class="align-middle text-nowrap ps-8">
                                    <h6 class="mb-0 text-900 h5 text-capitalize">{{name}}</h6>
                                    {{!-- <a class=" align-items-center" href="/admin/edit_product/{{id} }">
                                    </a> --}}
                                </td>
                                <td class="total align-middle fw-semi-bold text-1000 text-nowrap">{{price}} Bs</td>
                                <td>
                                    {{#each categories}}
                                        <span class="badge text-bg-light">{{this}}</span>                                         
                                    {{/each}}
                                    {{!-- <span class="badge text-bg-light">Electronica</span> --}}
                                </td>
                                <td class="date align-middle  text-700 text-nowrap"><span class="h5">{{stock}}</span> unidades</td>
                                <td class="text-center align-middle "><a href="/admin/edit_product/{{id}}" type="button" class="btn btn-sm btn-primary text-nowrap"><i class="fa-regular fa-pen-to-square"></i> Editar</a></td>
                            </tr>
                            {{/unless}}
                        {{/each}}
                        </tbody>
                    </table>
                        {{else}}
                        <div class="col-md-8 mx-auto text-center pt-5">
                            <div class="card card-body">
                                <h2>No hay ningún producto registrado</h2>
                                <a href="/admin/add_product"><h3>Añadir Un nuevo Producto</h3></a>
                            </div>
                        </div>
                    {{/if}}
                </div>
                
                {{!-- pagination bar --}}
                <div class="container-fluid mt-4">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            {{#with pagination_bar}}
                                <li class="page-item {{#unless previous}}disabled{{/unless}}"><a class="page-link" href="{{link}}?page=1"><i class="fa-solid fa-angles-left"></i></a></li>
                                <li class="page-item {{#unless previous}}disabled{{/unless}}"><a class="page-link" 
                                    href="{{link}}?page={{previous}}">Anterior</a></li>
                                {{#each display_nums}}
                                    <li class="page-item {{#if (lookup ../currentPageActive @index)}}active{{/if}}"><a class="page-link" 
                                        href="{{link}}?page={{this}}">{{this}}</a></li>
                                {{/each}}
                                <li class="page-item {{#unless next}}disabled{{/unless}}"><a class="page-link" 
                                    href="{{link}}?page={{next}}">Siguiente</a></li>
                                <li class="page-item {{#unless next}}disabled{{/unless}}"><a class="page-link" href="{{link}}?page={{numberOfPages}}"><i class="fa-solid fa-angles-right"></i></a></li>
                            {{/with}}
                        </ul>
                    </nav>
                </div>
            </main>
        </div>
    </div>

    <!-- bootstrap js cdn -->
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
       
</body>
