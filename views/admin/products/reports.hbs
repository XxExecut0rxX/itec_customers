                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">A単adir Reporte</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-center">
                                    <form action="/admin/report/add_report" method="post">
                                        <select class="form-select" aria-label="Default select example" id="rep_add_id" name="id">
                                            <option selected value="null">Seleccionar Reporte</option>
                                            {{#each reports}}
                                                {{#unless isActive}}
