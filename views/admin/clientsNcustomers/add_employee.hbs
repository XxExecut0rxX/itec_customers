<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solo vendedores</title>

    <!-- boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;900&family=Ubuntu:wght@300;400;700&display=swap"
        rel="stylesheet">
    <!-- font awesome icons -->
    <script src="https://kit.fontawesome.com/8faedc4425.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="../css/styles_dashboard.css">
</head>

<body>

    {{> a_header}}

    <div class="container-fluid">
        <div class="row">
            {{!-- side navbar --}}
            {{> a_sidebar bar_home="true"}}

            <!-- dashboard -->
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-5">
                <div class="container-fluid px-0 pt-3 pb-2 mb-4 border-bottom">
                    <div class="row ">
                        <div class="col mb-2">
                            <a class="btn btn-primary" href="/admin/salesperson"><i class="fa-solid fa-chevron-left"></i> Atras</a>
                        </div>
                        <div class="col text-center">
                            <h2>Añadir Vendedor Nuevo</h2>
                        </div>
                        <div class="col text-end">
                        </div>
                    </div>
                
                </div>
                {{#if message}}
                    <div class="alert {{alertType}} alert-dismissible fade show" role="alert">
                        {{message}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {{/if}}
                <div class="container pt-2">
                    <div class="row">
                        <div class="col-md-4 mx-auto">
                            <div class="card">
                                <div class="card-body">
                                    <form action="/admin/add_employee" method="POST">
                                        {{!-- <div class="form-group pb-3"> --}}
                                            <!-- {{!-- <input type="number" name="id" class="form-control" placeholder="ID" autofocus
                                                                                                readonly> --}} -->
                                            {{!-- <input type="number" name="id" class="form-control" placeholder="ID" value="{{next_id} }" readonly> --}}
                                        {{!-- </div> --}}
                                        <div class="form-group pb-3">
                                            <label class="" for="">email</label>
                                            <input type="email" name="email" class="form-control" placeholder="Email" maxlength="30" autofocus>
                                        </div>
                                        <div class="form-group pb-3">
                                            <label class="" for="">Nombre(s)</label>
                                            <input type="text" name="name" class="form-control" placeholder="Nombre" maxlength="30">
                                        </div>
                                        <div class="form-group pb-3">
                                            <label class="" for="">Apellido(s)</label>
                                            <input type="text" name="lastName" class="form-control" placeholder="Apellidos" maxlength="30">
                                        </div>
                                        <div class="form-group pb-3">
                                            <label class="" for="">Número de Contacto</label>
                                            <input type="tel" name="phoneNumber" class="form-control" placeholder="Número de celular" maxlength="8">
                                        </div>
                                        <div class="form-group pb-3">
                                            <label class="" for="">Dirección</label>
                                            <input type="text" name="localAddress" class="form-control" placeholder="Calle ... N° ###" maxlength="30">
                                        </div>
                                        <div class="container">
                                            <div class="row px-2">
                                                <div class="col form-check">
                                                    
                                                    <input class="form-check-input" type="radio" name="role" id="salesperson" value="salesperson" checked>
                                                    <label class="form-check-label" for="salesperson">
                                                        Vendedor
                                                    </label>
                                                </div>
                                                <div class="col form-check">
                                                    <input class="form-check-input" type="radio" name="role" id="admin" value="admin">
                                                    <label class="form-check-label" for="admin">
                                                        Administrador
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group pb-3">
                                            <h3>Contraseña</h3>
                                            <label class="" for="">Nueva Contraseña</label>
                                            <input type="password" name="password" class="form-control" placeholder="Escriba la nueva Contraseña" maxlength="30">
                                        </div>
                                        <div class="form-group pb-3">
                                            <label class="" for="">Repetir Contraseña</label>
                                            <input type="password" name="repPassword" class="form-control" placeholder="Repetir Contraseña"
                                                maxlength="30">
                                        </div>
                                        
                                        <div class="form-group text-center">
                                            <a href="/list_items" class="btn btn-secondary me-3"><span>Cancelar</span></a>
                                            <button href="/links/delete/{{id}}" type="submit" class="btn btn-success"><span>Guardar</span> <i
                                                    class="fa-regular fa-floppy-disk"></i></button>
                                        </div>
                                    </form>


                                </div>
                            </div>
                        </div>
                
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- bootstrap js cdn -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

</body>

</html>